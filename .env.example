# ===========================================
# INVOICE GENERATOR - КОНФИГУРАЦИЯ
# ===========================================

# Порт на котором будет работать сервер
PORT=3000

# Окружение (production/development)
NODE_ENV=production

# ===========================================
# АВТОРИЗАЦИЯ
# ===========================================
# Логин и пароль для доступа к системе

AUTH_USERNAME=admin
AUTH_PASSWORD=admin123

# ===========================================
# ЯНДЕКС.ДИСК (ОПЦИОНАЛЬНО)
# ===========================================
# Для загрузки счетов на Яндекс.Диск
# Получить токен: https://yandex.ru/dev/disk/poligon/

# OAuth токен Яндекс.Диска
YANDEX_DISK_TOKEN=your_oauth_token_here

# Путь к папке на Яндекс.Диске для сохранения счетов
YANDEX_DISK_FOLDER=/Счета
